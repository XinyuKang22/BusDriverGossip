{
  "name": "typescript-seed",
  "version": "0.0.1",
  "description": "An auto-updating, opinionated TypeScript seed project. All killer, no filler.",
  "main": "dist",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src --ext .ts,.tsx",
    "type-coverage": "type-coverage",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "test": "jest",
    "mutation-test": "stryker run",
    "prepare": "husky install",
    "release": "semantic-release",
    "commit": "git-cz"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agiledigital-labs/typescript-seed.git"
  },
  "author": "Agile Digital",
  "private": true,
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/agiledigital-labs/typescript-seed/issues"
  },
  "homepage": "https://github.com/agiledigital-labs/typescript-seed",
  "devDependencies": {
    "@semantic-release/git": "^9.0.0",
    "@stryker-mutator/core": "^5.2.2",
    "@stryker-mutator/jest-runner": "^5.2.2",
    "@stryker-mutator/typescript-checker": "^5.2.2",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.2",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-typed-fp": "^1.5.0",
    "eslint-plugin-functional": "^3.2.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-sonarjs": "^0.9.1",
    "eslint-plugin-total-functions": "^4.7.2",
    "fast-check": "^2.17.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "semantic-release": "^17.4.4",
    "ts-jest": "^27.0.3",
    "type-coverage": "^2.18.0",
    "typescript": "^4.3.5"
  },
  "typeCoverage": {
    "atLeast": 100,
    "ignoreCatch": false,
    "strict": true,
    "detail": true
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
