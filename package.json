{
  "name": "typescript-seed",
  "version": "0.0.1",
  "description": "An auto-updating, opinionated TypeScript seed project. All killer, no filler.",
  "main": "dist",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives",
    "type-coverage": "type-coverage",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "test": "jest",
    "mutation-test": "stryker run",
    "prepare": "husky install",
    "release": "semantic-release",
    "commit": "git-cz"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agiledigital-labs/typescript-seed.git"
  },
  "author": "Agile Digital",
  "private": true,
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/agiledigital-labs/typescript-seed/issues"
  },
  "homepage": "https://github.com/agiledigital-labs/typescript-seed",
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "@stryker-mutator/core": "6.3.0",
    "@stryker-mutator/jest-runner": "6.3.0",
    "@stryker-mutator/typescript-checker": "6.3.0",
    "@types/jest": "29.2.3",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.23.0",
    "eslint-config-agile-digital": "^1.2.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-typed-fp": "^3.3.0",
    "eslint-plugin-functional": "^4.2.2",
    "eslint-plugin-jest": "^27.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.15.0",
    "eslint-plugin-total-functions": "^6.0.0",
    "fast-check": "3.3.0",
    "husky": "8.0.2",
    "jest": "29.3.1",
    "prettier": "2.7.1",
    "semantic-release": "^19.0.5",
    "ts-jest": "29.0.3",
    "type-coverage": "2.23.0",
    "typescript": "^4.8.2"
  },
  "typeCoverage": {
    "atLeast": 100,
    "ignoreCatch": false,
    "strict": true,
    "detail": true
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
